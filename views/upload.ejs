<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload</title>
    <link rel="stylesheet" href="/style/nav.css">
    <link rel="stylesheet" href="/style/upload.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <nav>
        <div class="left">

            <div class="logo">
                <img src="/image/fb.jpg">
            </div>

            <div class="search_bar">

                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" placeholder="Search" >

            </div>

        </div>

        <div class="center">
            <a href="/posts">
                <i class="fa-solid fa-house"></i>
            </a>
        </div>

        <a class="right" href="/user/logout">
            <button class="logout">Log Out</button>
        </a>

    </nav>
    <!--main page-->
    <div class="main">

        <!------------------left------------------->

        <div class="left">
            <a href="/profile/userprofile/<%= user.username %>">
                <div class="img">
                    <img src="<%= user.profile %>">
                    <p><%= user.username %> </p>
                </div>
            </a>
            <a href="/friends/contact">
                <div class="img">
                    <img src="/image/friend.png">
                    <p>Contacts</p>
                </div>
            </a>
            <a href="/friends/addfriends">
                <div class="img">
                    <img src="/image/AddFriend.png">
                    <p>Add Friends</p>
                </div>
            </a>
            <a href="/bookmarks">
                <div class="img">
                    <img src="/image/saved.png">
                    <p>Saved</p>
                </div>
            </a>
            <a href="/posts/upload">
                <div class="img on">
                    <img src="/image/upload.png">
                    <p>Upload</p>
                </div>
            </a>
        </div>
        <div class="center">
            
            <div class="friends_post">
                <input type="file" accept="image/*" name="image" onchange="document.getElementById('output').src = window.URL.createObjectURL(this.files[0])" multiple id="input_gambar"  />
                <img id="output">

                <div class="comment_warpper">
                    <div class="comment_search">
                        <input type="text" placeholder="Write a Description" id="input_description">
                    </div>
                    <!-- <i class="fa-solid fa-paper-plane"></i> -->
                </div>

                <button class="post-button" id="post-story">POST</button>

            </div>
        </div>
    </div>

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/js/upload.js"></script>
    <script src="/js/search-redirect.js"></script>
</body>
</html>